/* @override
	http://oege.ie.hva.nl/~vlasma13/owgm/_css/main.css */

body {
	background: url('../_images/grass_tile.png') repeat-x fixed center top #392;
	font: 14px "Helvetica", Arial, sans-serif;
	padding: 0;
	margin: 0;
}

/*--begin secundairy body--
*
* This second body holds the main background picture and contains all the interface elements.
*
*/

#secundairy_body {
	background: url('../_images/grass.png') no-repeat fixed center top;
	width: 1100px;
	height: 954px;
	margin: auto;
	padding-top: 10px;
}

	#secundairy_body > * {
		margin-bottom: 10px;
		background-color: rgb(255, 255, 255); /* fallback for <= IE8 */
		background-color: rgba(255, 255, 255, 0.85);
	}

/*--end secundairy body--*/

/*--begin footer--*/

header {
	position: relative;
	padding: 10px;
	border-radius: 20px 20px 0 0;
}

	#header_image {
		background: url('../_images/header.png') no-repeat;
		width: 761px;
		height: 110px;
		margin: auto;
	}
	


/*--begin inlog elements--*/
#mask {
	display: none;
	background: #000; 
	position: fixed; left: 0; top: 0; 
	z-index: 10;
	width: 100%; height: 100%;
	opacity: 0.8;
	z-index: 999;
}

#inlog_button {
		background-color: rgba(51, 153, 33, 0.75);
		color: white;
		text-decoration: none;
		font-weight: bold;
		position: absolute;
		padding: 5px 10px;
		border-radius: 10px;
		margin: 15px;
		top: 0;
		right: 0;
}

	#inlog_button:hover {
			background-color: #392;
		}

	#inlog_button:active {
			background-color: #170;
		}
#logout_button{
		background-color: rgba(51, 153, 33, 0.75);
		color: white;
		text-decoration: none;
		font-weight: bold;
		position: absolute;
		padding: 5px 10px;
		border-radius: 10px;
		margin: 15px;
		top: 0;
		right: 0;                    
}
#inlog_box{
                    
}

.inlog_popup{
    display:none;
    top: 40%; left: 40%;
    z-index: 99999;
    box-shadow: 0px 0px 20px #999; /* CSS3 */
    moz-box-shadow: 0px 0px 20px #999; /* Firefox */
    -webkit-box-shadow: 0px 0px 20px #999; /* Safari, Chrome */
    border-radius:3px 3px 3px 3px;
    -moz-border-radius: 3px; /* Firefox */
    -webkit-border-radius: 3px; /* Safari, Chrome */
    position:fixed;
    padding: 10px;
    border: medium white solid;
    border-radius: 3px 3px 3px 3px;
    font-size: 1.2em;
}
        .login fieldset{
            border: none;
        }
        .login span{
             display:block;
        }
        .login label{
            margin-top: 5px;
            display:block;
        }
        .login .button{
            margin-top:5px;
            padding:6px 6px 4px;
            width: 216px;
        }
        .login input{
            border-radius: 3px 3px 3px 3px;
            border-bottom:1px solid #333;
            border-left:1px solid #000;
            border-right:1px solid #333;
            border-top:1px solid #000;
            padding:6px 6px 4px;
            width: 200px;
            font-size: 1.2em;
        }
        .login a{
              margin-left: 13px;
        }
#error{
    background-color: red;
    border-radius: 3px 3px 3px 3px;
}
#error p{
    margin: 0px;
    padding: 0px;
    max-width: 180px;
    font-size: 10px;
}
.system_feedback{
    background-color: #6d6;
    border-radius: 3px 3px 3px 3px;
    margin: 5px;
    width: auto;
    padding: 5px;
       
}

/*--end inlog elements--*/
/*--begin navigation bar--*/

nav {
	padding: 15px 0px;
	font-size: 18px;
	margin: 0;
}

	nav ul {
		padding: 0;
		margin: 0;
		text-align: center;
	}

		nav ul li {
			display: inline;
		}
		
			nav ul li a {
				text-decoration: none;
				text-shadow: 1px 1px 2px black;
				color: white;
				margin: 2px;
				border-radius: 7px;
				padding: 6px 55px;
				background: #0a0; /* fallback for <= IE9 */
				background: linear-gradient(bottom, #262 0%, #6d6 100%);
				background: -webkit-linear-gradient(bottom, #262 0%, #6d6 100%);
				background: -moz-linear-gradient(90deg, #262 0%, #6d6 100%);
				background: -o-linear-gradient(top left, #262 0%, #6d6 100%);
				background: -ms-linear-gradient(bottom, #262 0%, #6d6 100%);
			}
			
				.current_page,
				nav ul li a:hover {
				background: green; /* fallback for <= IE9 */
				background: linear-gradient(bottom, #262 54.4%, #6d6 100%);
				background: -webkit-linear-gradient(bottom, #262 54.4%, #6d6 100%);
				background: -moz-linear-gradient(90deg, #262 54.4%, #6d6 100%);
				background: -o-linear-gradient(top left, #262 54.4%, #6d6 100%);
				background: -ms-linear-gradient(bottom, #262 54.4%, #6d6 100%);
				}
				
				.current_page {
					color: #ff7;
				}
				
				nav ul li a:active {
					background: darkgreen; /* fallback for <= IE9 */
					background: linear-gradient(bottom, #020 0%, #494 100%);
					background: -webkit-linear-gradient(bottom, #020 0%, #494 100%);
					background: -moz-linear-gradient(90deg, #020 0%, #494 100%);
					background: -o-linear-gradient(top left, #020 0%, #494 100%);
					background: -ms-linear-gradient(bottom, #020 0%, #494 100%);
					color: silver;
				}
                                
				
/*--end navigation bar--*/

/*--begin section--
*
* Further styling of this section element must be done in the dedicated css file.
*
*/

section > *{
	margin: 0;
	padding: 0;
}

section {
	margin: 0;
	padding: 10px;
}

/*--end section--*/

/*--begin footer--*/

footer {
	padding: 0px;
	border-radius: 0 0 30px 30px;
	height: 150px;
}

	#sitemap {
		float: left;
		height: 111px;
		padding: 0;
		margin: 0;
	}
		#sitemap ul {
			margin-top: 0;
			padding-right: 50px;
			list-style: none;
			float: left;
			padding-left: 25px;
		}
		
			#sitemap ul li {
				line-height: 16px;
			}
			
				#sitemap ul li h3 {
					text-transform: uppercase;
					text-indent: -6px;
					
				}
			
				#sitemap ul li a {
					color: darkblue;
					text-decoration: none;
					line-height: 16px;
				}
			
					#sitemap ul li a:hover {
						color: blue;
					}
			
					#sitemap ul li a:active {
						color: black;
					}
	
	#credentials {
		position: relative;
		float:  right;
		padding-right: 10px;
		margin-top: 110px;
		font-size: 12px;
	}


/*--end footer--*/